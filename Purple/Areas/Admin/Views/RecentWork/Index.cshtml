@using Purple.Models;
@model List<RecentWork>




<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Recnt works
                </h2>
                <a asp-action="create" asp-controller="recentwork" asp-area="admin" class="btn btn-primary">Create recent work</a>
            </div>
        </div>
    </div>
</div>


<br />
<br />

<div class="container-xl" style="margin-left: 50px;">


<div class="col-12">
    <div class="card">
        <div class="table-responsive">
            <table class="table table-vcenter card-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Desc</th>
                            <th>ImagePath</th>
                        <th>Action</th>
                            <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Id </td>
                            <td >
                              @item.Title
                            </td>
                            <td >@item.Desc</td>
                            <td >
                                @item.ImagePath
                            </td>
                            <td>
                               <a class="btn btn-primary" asp-action="update" asp-controller="recentwork" asp-area="admin" asp-route-id="@item.Id">Update</a>
                            </td>
                                <td>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="recentwork" asp-area="admin" asp-route-id="@item.Id">Delete</a>
                                </td>
                           <td>


                           </td>
                        </tr>
                    }
             
                   
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

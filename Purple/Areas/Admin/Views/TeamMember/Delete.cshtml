@using Purple.Models;
@model TeamMember

<div class="card">
    <div class="card-body">
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <span class="avatar avatar-lg" style="background-image: url('@Url.Content($"~/assets/img/{Model.PhotoName}")')"></span>
            </div>
            <div class="col">
                <h4 class="card-title m-0">
                    <a href="#">@Model.Name</a>
                </h4>
                <div class="text-secondary">
                    @Model.Position
                </div>

            </div>
            <div class="col-auto">
                <form method="post" asp-action="deletecomponent" asp-controller="teammember" asp-area="admin" asp-route-id="@Model.Id" class="form-sample">

                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                    <button type="submit" class="btn btn-primary" asp-action="index" asp-controller="teammember" asp-area="admin">
                        Cancel
                    </button>
                </form>

            </div>

        </div>
    </div>
</div>
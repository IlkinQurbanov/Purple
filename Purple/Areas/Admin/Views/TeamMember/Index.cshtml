@using Purple.Models;
@model List<TeamMember>




<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Recnt works
                </h2>
                <a asp-action="create" asp-controller="teammember" asp-area="admin" class="btn btn-primary">Create  Team Member</a>
            </div>
        </div>
    </div>
</div>


<br />
<br />

<div class="container-xl" style="margin-left: 50px;">


    <div class="col-12">
        <div class="card">
            <div class="table-responsive">
                <table class="table table-vcenter card-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Position</th>
           
                        </tr>
                    </thead>
                    <tbody>

               
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id </td>
                                    <td>
                                    <span class="avatar me-2" style="background-image: url(~/assets/img/@item.PhotoName)"></span>
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>@item.Position</td>

                                    <td>
                                        <a class="btn btn-primary" asp-action="update" asp-controller="teammember" asp-area="admin" asp-route-id="@item.Id">Update</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="delete" asp-controller="teammember" asp-area="admin" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                       
                     


                    </tbody>
                </table>
            
            </div>
        </div>
    </div>
</div>



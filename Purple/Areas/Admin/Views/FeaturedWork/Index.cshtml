
@using Purple.Models;
@model FeaturedWork






@{
    if(Model == null)
    {
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <h2 class="page-title">
                            Featured Work
                        </h2>
                        <a asp-action="create" asp-controller="featuredwork" asp-area="admin" class="btn btn-primary">Create</a>
                    </div>
                </div>
            </div>
        </div>


        <br />
        <br />
    }
    else
    {

        <div class="container-xl" style="margin-left: 50px;">


            <div class="col-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-vcenter card-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td>@Model.Id </td>
                                    <td>
                                        @Model.Title
                                    </td>
                                    <td>
                                        @Model.Name
                                    </td>

                                    <td>
                                        <a class="btn btn-primary" asp-action="update" asp-controller="featuredwork" asp-area="admin" asp-route-id="@Model.Id">Update</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="delete" asp-controller="featuredwork" asp-area="admin" asp-route-id="@Model.Id">Delete</a>
                                    </td>
                                    <td>
                                    </td>
                                </tr>





                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>


    }
}


